<!--index.wxml-->
<view class="page">
  <view class='weui-flex' style='flex-direction: column;'>
    <view>
      <navigator url="../search/search">
        <view class="weui-search-bar">
          <view class="weui-search-bar__form">
            <label class="weui-search-bar__label">
              <icon class="weui-icon-search" type="search" size="14"></icon>
              <view class="weui-search-bar__text">搜索</view>
            </label>
            <view class="weui-search-bar__input" />
          </view>
        </view>
      </navigator>
    </view>
    <navigator wx:for="{{books}}" wx:key="url" url='../details/details?key={{item.key}}'>
      <view class="weui-flex">
        <image class='weui-flex item-cover' src='{{item.bookCoverImgUrl}}' data-index='{{index}}' binderror='bindDefaultImage' />
        <view class="weui-flex item-intro">
          <view class='weui-media-box__title'>{{item.name}}</view>
          <view class='weui-media-box__info'>
            <view>作者：{{item.author}}</view>
            <view>{{item.chapterList[item.chapterList.length-1].chapterName}}</view>
            <view>{{item.domain}}</view>
          </view>
        </view>
      </view>
    </navigator>
  </view>
</view>